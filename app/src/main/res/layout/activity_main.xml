<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTestApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test App Activity" />

    <Button
        android:id="@+id/btnTestA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test A Activity" />

    <Button
        android:id="@+id/btnTestB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test B Activity" />

    <Button
        android:id="@+id/btnTestService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Service" />

</LinearLayout>